<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/drop_shadow"
        android:layout_below="@+id/toolbar" />



    <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/android_test"
    android:background="#ffffff">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutBodyQuestionOne"
        android:weightSum="1"
        android:alpha="0.8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ProgressBar
            android:id="@+id/progressBarFirstQuestion"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="1"
            android:progressDrawable="@drawable/circular"
            android:layout_gravity="right"
            android:layout_weight="0.04"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="test"
            android:id="@+id/TimerQuestion1"
            android:layout_gravity="right"
            android:textSize="30dp"
            android:textColor="#03A9F4"
            android:layout_marginRight="15dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radioGroup1"
            android:paddingTop="10dp"
            android:background="@drawable/shape"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingRight="20dp"
            android:clickable="false"
            android:layout_marginTop="20dp"
            android:alpha="0.9"
            android:layout_weight="8.26"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Medium Text"
                android:id="@+id/textViewQuestion1"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#FFFFFFFF"
                android:layout_marginLeft="10dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New RadioButton"
                android:id="@+id/radioButton1"
                android:checked="false"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFFFF"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New RadioButton"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFFFF"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New RadioButton"
                android:id="@+id/radioButton3"
                android:checked="false"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textViewValidate1"
                android:layout_marginLeft="20dp"
                android:textSize="10dp" />
    </RadioGroup>
        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="15dp"
            android:layout_weight="8.26"
            android:id="@+id/checkBoxAnswersLayout"
            android:visibility="gone"
            android:alpha="0.9"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Medium Text"
                android:id="@+id/textViewQuestion"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFFFF"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:textSize="17dp"
                android:id="@+id/checkBox1"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="New CheckBox"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textColor="#FFFFFFFF"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:textSize="17dp"
                android:id="@+id/checkBox2"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="New CheckBox"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textColor="#FFFFFFFF"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:textSize="17dp"
                android:id="@+id/checkBox3"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="New CheckBox"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textColor="#FFFFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textViewValidate"
                android:layout_marginLeft="20dp"
                android:textSize="10dp" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="15dp"
        android:layout_weight="8.26"
        android:id="@+id/textAreaAnswersLayout"
        android:visibility="visible"
        android:alpha="0.9"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Medium Text"
            android:id="@+id/textViewQuestiontTextArea"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFFFF" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/edText"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textViewValidateTextArea"
            android:layout_marginLeft="20dp"
            android:textSize="10dp"
            android:textColor="#FFFFFFFF"/>

    </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT QUESTION"
        android:id="@+id/buttonNext1"
        android:background="@drawable/ripple_effect"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="90dp"
        android:layout_below="@id/LinearLayoutBodyQuestionOne"
        android:layout_alignParentEnd="true"
        android:textSize="35dp"
        android:textColor="@color/colorPrimary"
        android:padding="10dp"
        android:alpha="0.5"
        android:layout_alignParentStart="true" />


</RelativeLayout>
    </ScrollView>
    </LinearLayout>